---
import PlotFigure from "./PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";

export interface Props {
  species: string;
}

const { species } = Astro.props;
const speciesData = penguins.filter(({species: speciesName}) => speciesName === species);
---

<PlotFigure
  options={{
    marks: [
      Plot.dot(speciesData, {
        x: "culmen_length_mm",
        y: "culmen_depth_mm",
        stroke: "species",
      }),
    ],
  }}
/>