---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <h1 class="text-2xl">Test Astro et Plot (Observablehq)</h1>
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    }}
  />
  <button class="rounded bg-blue-500 text-white px-4 py-2 "><a href="/species/Adelie">Voir les penguins Adelie</a></button>
  <button class="rounded bg-yellow-500 text-white px-4 py-2 "><a href="/species/Gentoo">Voir les penguins Gentoo</a></button>
  <button class="rounded bg-orange-500 text-white px-4 py-2 "><a href="/species/Chinstrap">Voir les penguins Chinstrap</a></button>
</Layout>
